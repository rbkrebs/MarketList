<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.marketlist.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/bottom_nav_QRcode"
        android:name="com.example.marketlist.activities.QRCode"
        android:label="QRCode"
        tools:layout="@layout/activity_q_r_code"/>
    <activity
        android:id="@+id/bottom_nav_lista"
        android:name="com.example.marketlist.activities.ListaMercado"
        android:label="Lista"
        tools:layout="@layout/activity_lista_mercado"/>
    <activity
        android:id="@+id/bottom_nav_graficos"
        android:name="com.example.marketlist.activities.Gastos"
        android:label="Gastos"
        tools:layout="@layout/activity_gastos"/>
    <fragment
        android:id="@+id/bottom_nav_pesquisar"
        android:name="com.example.marketlist.fragments.SearchFragment"
        android:label="Pesquisa"
        tools:layout="@layout/fragment_search"/>

</navigation>