<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marketlist">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity"></activity>
        <activity
            android:name=".activities.CriaItemLista"
            android:parentActivityName=".activities.ListaSugerida" />
        <activity
            android:name=".activities.AlteraItemCompra"
            android:parentActivityName=".activities.ListaMercado" />
        <activity
            android:name=".activities.Sobre"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ListaSugerida"
            android:parentActivityName=".activities.ListaMercado" />
        <activity
            android:name=".activities.QRCode"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ListaMercado"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.Gastos"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>